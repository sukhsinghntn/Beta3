                    <div class="d-grid mb-2">
                        <button class="btn btn-secondary" @onclick="SaveDraft">Save Draft</button>
                    </div>
                    <div class="d-grid">
                        <button class="btn btn-primary btn-lg" @onclick="PublishForm">Publish Form</button>
                    </div>
                }
